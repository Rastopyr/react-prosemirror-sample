{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "plugins": [
    "react"
  ],
  "rules": {

    /* keep off */

    "quotes": 0,
    "comma-dangle": 0,
    "no-constant-condition": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,


    /* warnings */

    "react/wrap-multilines": 1,
    "react/self-closing-comp": 1,
    "no-multi-spaces": 1,
    "no-mixed-spaces-and-tabs": 1,
    "space-return-throw-case": 1,
    "no-empty": 1,
    "space-infix-ops": 1,
    "semi-spacing": 1,
    "comma-spacing": 1,
    "camelcase": 1,
    "key-spacing": 1,
    "strict": [1, "never"],
    "prefer-const": 1,
    "new-cap": 1,
    "space-unary-ops": 1,
    "no-extra-semi": 1,
    "eol-last": 1,
    "no-nested-ternary": 1,
    "no-console": 1,


    /* errors */

    "eqeqeq": 2,
    "consistent-this": [2, "self"],
    "curly": [2, "multi-line"],
    "no-shadow": 2,
    "no-undef": 2,
    "no-unused-vars": 2,

    "no-alert": 2,
    "no-debugger": 2,

    "react/prop-types": 2,
    "react/jsx-boolean-value": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/no-did-mount-set-state": [2, "allow-in-func"],
    "react/no-did-update-set-state": 2,
    "react/no-unknown-property": 2,
    "react/react-in-jsx-scope": 2,
    "react/require-extension": 2
  },
  "globals": {
    "define": true,
    "config": true,
    "current_user": true,
    "angular": true,
    "_": false
  }
}
